@model Module

@{
    ViewData["Title"] = "Create Module";
}

<head>
    <script src="~/js/jquery-3.4.1.min.js"></script>
</head>
<h2>Onboarding Platform</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Module" asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Module_Code" class="control-label">Module Code</label>
                <input asp-for="Module_Code" class="form-control" maxlength="5" />
                <span asp-validation-for="Module_Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Module_Title" class="control-label">Module Title</label>
                <input asp-for="Module_Title" class="form-control" />
                <span asp-validation-for="Module_Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Degree" class="control-label">Degree</label>
              
                <select asp-for="Degree_Id" asp-items="@ViewBag.Degrees">

                    <option value="">----Select Degree----</</option>
                </select>
                <span asp-validation-for="Degree_Id" class="text-danger"></span>
            </div>

            <span><label for="Module_Code">Is Compulsory?</label></span>
            <input asp-for="isCompulsory" type="checkbox" id="isCompulsory" name="isCompulsory" value="true">

            <div class="form-group">
                <input type="submit" id="btnSubmit" value="Create" class="btn btn-default bg-info" />
            </div>
        </form>
    </div>
</div>
<div>
</div>